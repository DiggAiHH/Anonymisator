FROM node:18-slim

WORKDIR /app

# Copy package files
COPY package.json package-lock.json tsconfig.json ./

# Install dependencies (deterministic)
RUN npm ci

# Copy source code
COPY src ./src

# Build TypeScript
RUN npm run build

# Run as non-root (security best practice)
RUN chown -R node:node /app
USER node

# Expose port
EXPOSE 3000

# Run application
CMD ["npm", "start"]
