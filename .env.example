#############################################
# Beispiel-Konfiguration (OHNE Secrets)
#
# Kopiere nach `.env` und setze produktive Werte.
# WICHTIG: Keine echten Keys/Secrets committen.
#############################################

# ------------------------------
# Runtime (Docker/Uvicorn)
# ------------------------------
# Hinweis: HOST/PORT werden in docker-compose genutzt (Uvicorn-Args),
# der Python-Code liest diese Variablen nicht direkt.
HOST=0.0.0.0
PORT=8000

# ------------------------------
# Backend: CORS (secure-by-default)
# ------------------------------
# Leer lassen = CORS ist deaktiviert.
# Kommagetrennte Liste von erlaubten Origins.
CORS_ALLOW_ORIGINS=
# Standard: false
CORS_ALLOW_CREDENTIALS=false

# ------------------------------
# Backend: SecureDoc Auth (secure-by-default)
# ------------------------------
# Standard: true (API-Key wird verlangt)
SECUREDOC_REQUIRE_API_KEY=true
# SECRET (required wenn SECUREDOC_REQUIRE_API_KEY=true)
SECUREDOC_API_KEY=

# ------------------------------
# Backend: SecureDoc Rate Limit (secure-by-default)
# ------------------------------
# Standard: true
SECUREDOC_RATE_LIMIT_ENABLED=true
# Requests per second (float), Standard: 2
SECUREDOC_RATE_LIMIT_RPS=2
# Burst Tokens (float), Standard: 5
SECUREDOC_RATE_LIMIT_BURST=5

# ------------------------------
# Backend: Re-Identify Strictness
# ------------------------------
# Wenn true: fail-closed, sobald Placeholder im LLM-Output fehlen.
# Standard: false
REIDENTIFY_FAIL_ON_MISSING_PLACEHOLDERS=false

# ------------------------------
# Backend: LLM Client
# ------------------------------
LLM_PROVIDER=openai
LLM_API_URL=https://api.openai.com/v1/chat/completions
# SECRET (optional â€“ leer => Mock-Response, kein externer Call)
LLM_API_KEY=
LLM_MODEL=gpt-4
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0
# Pfad zur Master-Prompt-Datei (repo-lokal)
LLM_MASTER_PROMPT_PATH=.1Promp/Master Prompt

# ------------------------------
# Backend: Stripe
# ------------------------------
# SECRET (optional)
STRIPE_API_KEY=
# SECRET (required wenn Webhook produktiv genutzt)
STRIPE_WEBHOOK_SECRET=

# ------------------------------
# MCP Server (Express)
# ------------------------------
MCP_PORT=3000
# Standard: true
MCP_REQUIRE_API_KEY=true
# SECRET (required wenn MCP_REQUIRE_API_KEY=true)
MCP_API_KEY=
# Standard: true
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_RPS=2
MCP_RATE_LIMIT_BURST=5

# Optional: beeinflusst Error-Responses (dev zeigt mehr Details)
NODE_ENV=production
